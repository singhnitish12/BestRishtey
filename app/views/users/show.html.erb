<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Instagram Profile</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #fafafa;
      font-family: 'Arial', sans-serif;
    }

    .profile-container {
      max-width: 600px;
      margin: 50px auto;
      background-color: #fff;
      border: 1px solid #e1e1e1;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
      padding: 20px;
      border-bottom: 1px solid #e1e1e1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
    }

    .profile-image {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      overflow: hidden;
      display: flex;
      justify-content: center;
      text-align: center;
    }

    .profile-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .profile-info {
      text-align: center;
      margin-top: 10px;
    }

    .profile-info h2 {
      margin-bottom: 5px;
    }

    .profile-info p {
      color: #666;
    }

    .profile-actions {
      display: flex;
      justify-content: center;
      gap: 10px;
    }

    .profile-actions button {
      background-color: transparent;
      border: none;
      cursor: pointer;
    }

    .profile-actions i {
      font-size: 24px;
    }

    .profile-posts {
      display: flex;
      overflow-x: auto; /* Add horizontal scrollbar if needed */
      padding: 20px;
    }

    .post {
      margin-right: 10px;
      overflow: hidden;
      border-radius: 8px;
    }

    .post img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }
  </style>
</head>

<body>

  <div class="profile-container mt-5">
    <!-- Profile Header -->
    <div class="profile-header">
      <!-- Profile Image -->
      <div class="profile-image mt-3">
        <% if @user.avatar.present? %>
           <%= image_tag(@user.avatar, class: "imag") %>
         <% else %>
             <%= image_tag("/assets/dummy profile.jpg", class: "imag") %>
          <% end %>
      </div>
      <!-- Profile Info -->
      <div class="profile-info mt-4">
       <h6>UserName: <%= @user.username %></p>
        <p>Email: <%= @user.email %></p>
       <p>Location: <%= @user.city %></p>
      </div>
      <!-- Profile Actions (Follow, Message, etc.) -->
     
      <div class="profile-actions ">
          <button><i class="fas fa-plus-circle"></i> Follow</button>
          <button><i class="fas fa-envelope"></i> Message</button>
         <%= link_to edit_user_path(current_user) do %>
            <button><i class="fas fa-cog"></i></button>
         <% end %>
     </div>
    </div>

    <!-- Profile Posts -->
    <div class="profile-posts">
      <!-- Sample Posts (Replace with your actual posts) -->
      <div class="post">
        <% if @user.avatar.present? %>
           <%= image_tag(@user.avatar, class: "imag") %>
         <% else %>
             <%= image_tag("/assets/dummy profile.jpg", class: "imag") %>
          <% end %>
       
      </div>
      <!-- Add more posts as needed -->
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>







